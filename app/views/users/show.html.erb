<div class="profile-header" 
style="background-image: url(<%= @user.image.url(:image).to_s %>)">
  <h2><%= @user.first_name %></h2><h2><%= @user.last_name %></h2>
</div>



<% if @user.image == nil %>
  <%= image_tag('rails.png') %>
<% else %>
  <%= image_tag @user.image.url(:profile).to_s %>
<% end %>

<%= link_to "Edit Profile", edit_user_path(@user), class: "tiny button" %>

<br>

<h2>Goals</h2>
<% @user.goals.each do |goal| %>
  <%= link_to "#{goal.verb.capitalize} #{goal.title}", goal_path(goal.id), 
  class: "button medium secondary" %> <br>
<% end %>