<%= simple_form_for @user, :html => { class: 'custom', multipart: true } do |f| %>      
        
  <fieldset>
    <%= f.input :first_name %>
    <br>
    <%= f.input :last_name %>
    <br>
    <%= f.input :email, placeholder: 'user@example.com' %>
    <br>
    <%= f.input :password %>
    <br>
    <%= f.label :gender %>
    <%= f.select :gender, ['Female', 'Male'] %>

  </fieldset>
  <fieldset>
    <%= f.input :date_of_birth, label: 'Date of Birth', start_year: 1950, end_year: (Time.now).year %>
  </fieldset>
  <fieldset>
    <%= f.input :image, label: "Profile Pic" %>
    <br>
    <h6>or</h6>
    <br>
    <%= f.input :remote_image_url, label: "link to image url" %>
  </fieldset>

  <%= f.button :submit %>

<% end %>