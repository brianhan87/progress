<div class="fixed">
  <nav class="top-bar toggle-topbar">
    <ul class="title-area">
      <li class="name"><h1><%= link_to 'Progress', root_path %></h1></li>
      <li class="toggle-topbar">
        <a class="menu" href="#">Menu</a>
      </li>
    </ul>
   
    <section class="top-bar-section">
      <ul class="right">
        <li class="divider"></li>
        <li><%= link_to 'Home', root_path, class: "active" %></li>
        <li class="divider"></li>
        <li><%= link_to 'How Progress Works', '#' %></li>
        <li class="divider"></li>
        <li><%= link_to 'Explore Current Goals', goals_path %></li>
        <li class="divider"></li>
        <li><%= link_to 'About Progress', '#' %></li>

        <% if current_user %>
          <li class="divider"></li>
          <li><%= link_to "#{current_user.first_name}'s Goals", 
            user_goals_path(current_user.id) %></li>
          <li class="divider"></li>
          <li><%= link_to 'Logout', logout_path, class: "radius button" %></li>
        <% else %>
          <li class="divider"></li>
          <li><%= link_to 'Sign up', new_user_path, 
            class: "medium secondary radius button" %></li>
          <li class="divider"></li>
          <li><%= link_to 'Log in', login_path, class: "radius button" %></li>
        <% end %>

        <li class="divider"></li>
        <li><%= link_to 'Add New Goal', new_goal_path, 
          class: "success radius button" %></li>
       
      </ul>
    </section>
  </nav>
</div>