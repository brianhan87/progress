<div class="small-12">
  <h1 class="subheader goal">
    <%= @goal.user.first_name %> <%= @goal.user.last_name %> wants to:
  </h1>
  <h2 class="goal"><%= @goal.verb.capitalize %> <%= @goal.title.downcase %></h2>

<% @micro_goals.each do |m| %>
<!-- if micro_goal has no proof -->
  <% if m.proof == nil %> 
  <div class="microgoal-row"> 
    <div class="microgoal left blank">
      <div class="microgoal-content">&nbsp;</div>
    </div>
    <div class="microgoal right"> 
      <div class="microgoal-content">
        <%= m.title.capitalize %> : <%= m.completion_date %>
      </div>
    </div>
  </div>
  <% else %>
  <div class="microgoal-row">
    <div class="microgoal left">
      <div class="microgoal-content">
        <%= m.title.capitalize %> : <%= m.completion_date %>
      </div>
    </div>
    <div class="microgoal right blank">
      <div class="microgoal-content">&nbsp;</div>
    </div>
  </div>
  <% end %>
<% end %>
  <br>
  <div class="row">
    <div class="small-4 small-centered">
      <%= link_to "Add microgoals", new_goal_micro_goal_url(@goal.id), class: "goal" %> |
      <%= link_to "Back to Goals", goals_path, class: "goal" %> 
    </div>
  </div>
</div>




















