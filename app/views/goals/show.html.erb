
<h1 class="subheader"><%= @goal.user.first_name %> <%= @goal.user.last_name %> wants to:</h1>
<h2><%= @goal.verb.capitalize %> <%= @goal.title.downcase %></h2>

<div class="small-12 small-centered columns">
  <% @micro_goals.each do |m| %>
    <!-- Completed MicroGoal -->
    <div class="goal-example">
      <% if m.proof != nil && m.proof.completed == true %>
        <div class="goal goal-left">
          <div class="goal-content left">&nbsp;
          </div>
        </div>
        <div class="goal goal-right-blank">
          <div class="goal-content-blank">&nbsp;
        </div>
      </div>
      <% else  %>
      <!-- Incomplete MicroGoal -->
        <div class="goal goal-right">
          <div class="goal-content incomplete">
            <p class="subheader"><strong><%= m.title.capitalize %></strong></p>
            <p class="subheader"><strong>Completion date:</strong> <%= m.completion_date %></p>
          </div>
        </div>
        <div class="goal goal-left-blank">
          <div class="goal-content-blank">&nbsp;
        </div>
      </div>
      <% end %>
    </div>
    <!-- Blank divs to create straight lines between micro goals -->
    <div class="goal-example">
      <div class="goal goal-left-blank">
        <div class="goal-content-blank">&nbsp;
        </div>
      </div>
      <div class="goal goal-right-blank">
        <div class="goal-content-blank">&nbsp;
        </div>
      </div>
    </div>  

  <% end %>
</div>
<div class="small-3 small-centered columns">
  <h3 class="subheader small-block-grid-1"><%= @goal.user.first_name %> <%= @goal.user.last_name %> will:</h3>
  <h4 class="small-block-grid-1"><%= @goal.verb.capitalize %> <%= @goal.title.downcase %></h4>
</div>
<%= link_to "Add microgoals", new_goal_micro_goal_url(@goal.id) %> |
<%= link_to "Back to Goals",  goals_path %> 